<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_color</item>
        <item name="colorAccent">@color/red</item>
    </style>

    <style name="AppThemeMain" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowIsTranslucent">false</item>
    </style>

    <style name="SplashTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- 欢迎页背景引用刚才写好的 -->
        <item name="android:windowBackground">@drawable/splash</item>
        <item name="android:windowFullscreen">true</item>
        <!-- <item name="android:windowIsTranslucent">true</item> --> <!-- 透明背景不要了 -->
    </style>


    <style name="activity_root_layout">
        <item name="android:fitsSystemWindows">true</item>
    </style>

    <style name="HomeTabItemText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:textSize">11sp</item>
        <item name="android:textColor">#7597B3</item>
    </style>
    
    <!--mine-->
    <style name="MainContainer">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:paddingTop">16dp</item>
        <item name="android:paddingBottom">16dp</item>
        <item name="android:background">@color/background</item>
    </style>

    <style name="HorizontalDividerView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0.3dp</item>
        <item name="android:background">@color/divider</item>
    </style>

    <style name="VerticalDividerView">
        <item name="android:layout_width">0.5dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/divider</item>
    </style>
    
    <style name="HeadBlockLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">@dimen/margin_standard</item>
    </style>


    <style name="ListView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:divider">@color/divider</item>
        <item name="android:dividerHeight">1px</item>
        <item name="android:listSelector">#00000000</item>
    </style>

    <style name="ListViewNoDivider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:divider">@null</item>
        <item name="android:listSelector">#00000000</item>
    </style>

    <style name="ListItemLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">@dimen/list_horizontal_padding</item>
        <item name="android:paddingRight">@dimen/list_horizontal_padding</item>
        <item name="android:paddingTop">@dimen/list_item_vertical_padding</item>
        <item name="android:paddingBottom">@dimen/list_item_vertical_padding</item>
        <item name="android:background">@drawable/list_item_background</item>
    </style>

    <style name="SmallListItemLayout" parent="@style/ListItemLayout">
        <item name="android:paddingTop">@dimen/small_list_item_vertical_padding</item>
        <item name="android:paddingBottom">@dimen/small_list_item_vertical_padding</item>
    </style>

    <style name="PrimaryText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/primary_text</item>
    </style>

    <style name="SecondText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/secondary_text</item>
    </style>

    <style name="HighlightText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="ListPrimaryText" parent="PrimaryText"/>
    
    <style name="ListPrimaryTextSmall" parent="@style/ListPrimaryText">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="ListSecondaryText" parent="SecondText"/>

    <style name="ListSecondaryTextSmall" parent="@style/ListSecondaryText">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="titleText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">17sp</item>
        <item name="android:textColor">@color/primary_text</item>
    </style>

    <style name="contentText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">17sp</item>
        <item name="android:textColor">@color/secondary_text</item>
    </style>

    <style name="timeAgoText" parent="@style/ListSecondaryText">
        <item name="android:textSize">10sp</item>
    </style>

    <style name="contentEditText">
        <item name="android:background">@drawable/edittext_background</item>
    </style>

    <style name="BlueButton" parent="Widget.AppCompat.Button">
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/blue_button_background</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:textSize">18sp</item>
        <item name="android:height">30dp</item>
    </style>

    <style name="TransparentButton" parent="Widget.AppCompat.Button">
        <item name="android:textColor">@color/primary_color</item>
        <item name="android:background">@drawable/trans_button_background</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:textSize">18sp</item>
        <item name="android:height">30dp</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
    </style>

    <style name="TransparentWhiteButton" parent="Widget.AppCompat.Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/trans_white_button_background</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:textSize">20sp</item>
        <item name="android:height">30dp</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
    </style>

    <style name="TransparentButtonSmall" parent="Widget.AppCompat.Button">
        <item name="android:textColor">@color/primary_color</item>
        <item name="android:background">@drawable/trans_button_background</item>
        <item name="android:layout_marginTop">14dp</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="TransparentImageTextView" parent="TransparentButton">
        <item name="android:gravity">center</item>
        <item name="android:paddingLeft">14dp</item>
        <item name="android:paddingRight">14dp</item>
        <item name="android:paddingTop">6dp</item>
        <item name="android:paddingBottom">6dp</item>
        <item name="android:drawablePadding">6dp</item>
    </style>



    <style name="ImageItemLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/list_item_background</item>
        <item name="android:clickable">true</item>
        <item name="android:paddingLeft">20dp</item>
        <item name="android:paddingRight">20dp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
    </style>
    <style name="ImageItemRightIcon">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:src">@drawable/arrows_bg</item>
    </style>

    //半透明文本layout
    <style name="TransparentLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
        <item name="android:background">@color/transparent_black_85</item>
    </style>

    <style name="TransparentLayoutText">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">14sp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    //商品列表名
    <style name="GoodsListTitle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/secondary_text</item>
        <item name="android:maxLines">2</item>
        <item name="android:layout_marginLeft">5dp</item>
    </style>

    <!--表单-->
    <style name="FormItemLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
    </style>
    <style name="FormDesText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/secondary_text</item>
        <item name="android:textSize">18sp</item>
    </style>
    <style name="FormValueEditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/primary_text</item>
        <item name="android:textSize">18sp</item>
        <item name="android:background">@null</item>
        <item name="android:gravity">right</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="FormValueEditTextRequired" parent="FormValueEditText">
        <item name="android:hint">@string/required</item>
    </style>
    <!--表单-->


    //progress dialog
    <style name="ProgressDialog" parent="android:Theme.DeviceDefault.Dialog">
        <item name="DialogTitleAppearance">@android:style/TextAppearance.Medium</item>
        <item name="DialogSpotColor">@color/course_taxonomy_1</item>
        <item name="DialogSpotCount">4</item>
    </style>


    <style name="ProgressDialogWait" parent="ProgressDialog">
        <item name="DialogTitleText">@string/wait</item>
    </style>

    <style name="ProgressDialogWaitLocation" parent="ProgressDialog">
        <item name="DialogTitleText">@string/wait_location</item>
    </style>


    <!-- 文本 - 滑动标签标题 -->
    <style name="text_slidingTabTitle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/selector_slide_title</item>
        <item name="android:layout_marginLeft">16dp</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:layout_marginRight">16dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/blue</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="ToastLayout">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
        <item name="android:background">@drawable/bg_custom_dialog</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:paddingTop">@dimen/toast_padding_vertical</item>
        <item name="android:paddingBottom">@dimen/toast_padding_vertical</item>
        <item name="android:paddingLeft">@dimen/toast_padding_horizontal</item>
        <item name="android:paddingRight">@dimen/toast_padding_horizontal</item>
    </style>

    <style name="ToastTitle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="ToastContent">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">#ffce26</item>
    </style>

    <style name="ToastTips">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/white</item>
    </style>
</resources>
