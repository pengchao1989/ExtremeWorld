<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:emojicon="http://schemas.android.com/apk/res-auto"
    android:id="@+id/reply_widget_root_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingBottom="6dp"
    android:paddingTop="6dp"
    >

    <com.yumfee.emoji.EmojiconEditText
        android:id="@+id/reply_widget_edittext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="80dp"
        emojicon:emojiconSize="28sp"
        android:hint="@string/want_speek"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <ImageView
            android:id="@+id/new_edit_widget_emoji_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:padding="4dp"
            android:src="@mipmap/btn_pb_add_expression_1"
            />

        <ImageView
            android:id="@+id/new_edit_widget_img_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/btn_pb_add_pic_1"
            android:layout_gravity="bottom"
            android:padding="4dp"
            />

        <ImageView
            android:id="@+id/new_edit_widget_video_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/btn_pb_add_camera"
            android:layout_gravity="bottom"
            android:padding="4dp"
            />

    </LinearLayout>



</LinearLayout>