<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:my="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    style="@style/activity_root_layout"
    >

    <com.jixianxueyuan.widget.MyActionBar
        android:id="@+id/course_detail_actionbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        my:action_title="@string/course_detail"
        my:type="text"
        my:action_text="@string/edit"
        />

    <ListView
        android:id="@+id/course_detail_listview"
        style="@style/ListView"
        />

</LinearLayout>