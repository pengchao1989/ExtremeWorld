<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    >

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <ListView
            android:id="@+id/topic_list_fragment_listview"
            style="@style/ListContainer"
            android:scrollbars="none"
            />



        <com.melnykov.fab.FloatingActionButton
            android:id="@+id/topic_list_fragment_fab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|right"
            android:layout_margin="16dp"
            android:src="@mipmap/ic_add_white_24dp"
            fab:fab_colorNormal="@color/primary"
            fab:fab_colorPressed="@color/primary_pressed"
            fab:fab_colorRipple="@color/ripple"/>


        <FrameLayout
            android:id="@+id/topic_list_fragment_add_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone"
            >

            <View
                android:id="@+id/topic_list_fragment_add_blank_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#a0000000"
                android:clickable="true"
                />

            <LinearLayout
                android:id="@+id/topic_list_fragment_add_button_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="bottom"
                android:paddingTop="16dp"
                android:paddingBottom="20dp"
                android:background="@color/white"
                android:weightSum="3"
                >


                <LinearLayout
                    android:id="@+id/topic_list_fragment_add_discuss"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:clickable="true">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/ic_message_black_48dp"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/discuss"
                        />



                </LinearLayout>


                <LinearLayout
                    android:id="@+id/topic_list_fragment_add_mood"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:clickable="true">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/ic_picture_in_picture_black_48dp"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/mood"
                        />


                </LinearLayout>

                <LinearLayout
                    android:id="@+id/topic_list_fragment_add_short_video"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:clickable="true"
                    >
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/ic_videocam_black_48dp"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/short_video"
                        />

                </LinearLayout>

            </LinearLayout>


        </FrameLayout>





        </FrameLayout>



</RelativeLayout>