<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    style="@style/activity_root_layout">

    <com.jixianxueyuan.widget.MyActionBar
        android:id="@+id/site_list_activity_actionbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:type="image"
        app:action_image="@mipmap/icon_pop_add_1"
        />

    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/site_list_swiperefresh"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

        <ListView
            android:id="@+id/site_listview"
            style="@style/ListView"/>

    </android.support.v4.widget.SwipeRefreshLayout>

</LinearLayout>