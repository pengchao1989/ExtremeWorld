<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:my="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <com.jixianxueyuan.widget.MyActionBar
        android:id="@+id/create_topic_actionbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        my:type="submit"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        style="@style/MainContainer"
        android:background="@color/white"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <EditText
                android:id="@+id/create_topic_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/title"
                />

            <LinearLayout
                android:id="@+id/create_edit_widget_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                />

            <RelativeLayout
                android:id="@+id/create_topic_video_thumble_layout"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:visibility="gone"
                >

                <ImageView
                    android:id="@+id/create_topic_video_thumble_imageview"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/zeus_player_play"
                    android:layout_centerInParent="true"
                    />

             </RelativeLayout>




        </LinearLayout>

        <com.jixianxueyuan.widget.RoundProgressBarWidthNumber
            android:id="@+id/create_short_video_progress"
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:layout_gravity="center"
            android:visibility="gone"
            />

    </RelativeLayout>





</LinearLayout>