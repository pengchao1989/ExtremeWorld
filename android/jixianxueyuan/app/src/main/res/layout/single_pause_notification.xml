<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView android:id="@+id/progress_pause_image"
        android:layout_width="wrap_content"
        android:layout_height="400dp"
        android:layout_margin="10dp">
    </ImageView>

    <RelativeLayout android:id="@+id/progress_content_pause"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@+id/progress_pause_image">

        <TextView android:id="@+id/progress_title_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Title"
            android:textStyle="bold"
            android:textSize="20sp"
            android:textColor="#fff">
        </TextView>

        <TextView android:id="@+id/progress_percentage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="5dp"
            android:text="100 / 100"
            android:textStyle="normal"
            android:textSize="20sp"
            android:textColor="#fff">
        </TextView>


        <TextView android:id="@+id/wait_text"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/progress_title_text"
            android:layout_marginTop="3dp"
            android:text=""
            android:textStyle="normal"
            android:textSize="20sp"
            android:textColor="#fff">
        </TextView>



    </RelativeLayout>

</RelativeLayout>