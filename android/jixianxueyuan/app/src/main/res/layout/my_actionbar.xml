<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/actionbar_height"
    android:orientation="vertical"
    android:background="@color/primary_color"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <LinearLayout
            android:id="@+id/page_head_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:padding="6dp"
            >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/ic_arrow_left"
                />

        </LinearLayout>

        <TextView
            android:id="@+id/page_head_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:singleLine="true"
            android:paddingLeft="34dp"
            android:paddingRight="20dp"
            />


        <FrameLayout
            android:id="@+id/page_head_action"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:visibility="gone"
            tools:visibility="visible"
            >

            <TextView
                android:id="@+id/page_head_action_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@drawable/action_right_button"
                android:textSize="18sp"
                android:visibility="gone"
                android:paddingTop="6dp"
                android:paddingBottom="6dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                tools:text="send"
                />

            <ImageButton
                android:id="@+id/page_head_action_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="6dp"
                android:paddingBottom="6dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:background="@null"
                tools:visibility="visible"
                tools:src="@drawable/actionbar_share_button_background"/>


        </FrameLayout>


        <FrameLayout
            android:id="@+id/page_head_action_second"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/page_head_action"
            android:visibility="gone"
            tools:visibility="visible">

            <ImageButton
                android:id="@+id/page_head_action_second_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="6dp"
                android:paddingBottom="6dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:background="@null"
                tools:visibility="visible"
                tools:src="@mipmap/icon_download_cut"/>

            </FrameLayout>

    </RelativeLayout>

<!--    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/grey_deep"
        android:layout_alignParentBottom="true"
        />-->

</RelativeLayout>