<?xml version="1.0" encoding="utf-8"?>
<com.flipboard.bottomsheet.BottomSheetLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/bottom_sheet"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/root"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="end">

        <FrameLayout
            android:id="@+id/content"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

        </FrameLayout>

        <View style="@style/HorizontalDividerView"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="#FFFFFF">

            <RelativeLayout
                android:id="@+id/tab_dynamic_layout"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/tab_trends_image"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:src="@mipmap/bottombar_message">
                    </ImageView>

                    <TextView
                        android:id="@+id/tab_trends_text"
                        android:text="@string/topic"
                        style="@style/HomeTabItemText"/>

                </LinearLayout>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/tab_course_layout"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/tab_course_image"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:src="@mipmap/ic_school_grey600_18dp">
                    </ImageView>

                    <TextView
                        android:id="@+id/tab_course_text"
                        android:text="@string/course"
                        style="@style/HomeTabItemText"/>

                </LinearLayout>
            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/tab_discover_layout"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/tab_discover_image"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:src="@mipmap/bottombar_find">
                    </ImageView>

                    <TextView
                        android:id="@+id/tab_discover_text"
                        android:text="@string/discovery"
                        style="@style/HomeTabItemText"/>

                </LinearLayout>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/tab_mine_layout"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/tab_mine_image"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:src="@mipmap/bottombar_mine">
                    </ImageView>

                    <TextView
                        android:id="@+id/tab_mine_text"
                        android:text="@string/mine"
                        style="@style/HomeTabItemText"/>

                </LinearLayout>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/tab_market_layout"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/tab_market_image"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:src="@mipmap/bottombar_shop">
                    </ImageView>

                    <TextView
                        android:id="@+id/tab_market_text"
                        android:text="@string/store"
                        style="@style/HomeTabItemText"/>

                </LinearLayout>
            </RelativeLayout>


            </LinearLayout>
        </LinearLayout>


</com.flipboard.bottomsheet.BottomSheetLayout>