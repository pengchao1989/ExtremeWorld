<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/ListItemLayout"
    >

    <include layout="@layout/user_info_head_view"/>

    <TextView
        android:id="@+id/topic_detail_list_item_reply_content"
        android:layout_marginTop="@dimen/list_content_margin_head"
        android:layout_marginLeft="@dimen/avatar_alignment"
        style="@style/ListPrimaryTextSmall"
        tools:text="content"
        />

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/image_view"
        android:layout_width="@dimen/list_thumbnail_width"
        android:layout_height="@dimen/list_thumbnail_width"
        android:layout_marginLeft="@dimen/avatar_alignment"
        android:layout_marginTop="8dp"
        android:padding="2dp"
        android:visibility="gone"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="@dimen/list_content_margin_head"
        android:layout_marginLeft="@dimen/avatar_alignment">

        <TextView
            android:id="@+id/topic_detail_list_item_sub_reply_content_1"
            android:layout_marginTop="@dimen/list_content_margin_head"
            style="@style/ListSecondaryTextSmall"/>


        <TextView
            android:id="@+id/topic_detail_list_item_sub_reply_content_2"
            android:layout_marginTop="@dimen/list_content_margin_head"
            style="@style/ListSecondaryTextSmall"/>


        <TextView
            android:id="@+id/topic_detail_list_item_sub_reply_content_3"
            android:layout_marginTop="@dimen/list_content_margin_head"
            style="@style/ListSecondaryTextSmall"/>

        <TextView
            android:id="@+id/topic_detail_list_item_sub_reply_loadmore"
            android:layout_marginTop="@dimen/list_content_margin_head"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:textColor="@color/blue"
            android:text="@string/load_sub_reply"/>

    </LinearLayout>

</LinearLayout>