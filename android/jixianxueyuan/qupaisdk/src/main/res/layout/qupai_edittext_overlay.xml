<?xml version="1.0" encoding="utf-8"?>
<com.duanqu.qupai.widget.EditImageWithPlay 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:duanqu="http://schemas.android.com/apk/res-auto"
    android:id="@+id/edit_overlay"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    
    <com.duanqu.qupai.widget.MyFrameLayout 
        android:id="@android:id/content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"        
        android:background="?attr/qupaiDIYOverlayContent_frame"
        android:contentDescription="@null"
        android:duplicateParentState="true">
        <com.duanqu.qupai.player.play.AnimPlayerView
	        android:id="@+id/content_animation"
	        android:layout_width="match_parent"
	        android:layout_height="match_parent"        
	        android:contentDescription="@null"
	        android:duplicateParentState="true"	        
	        android:scaleX="1.001"
	        android:scaleY="1.001"/>
        <com.duanqu.qupai.widget.AutoScaleEditText
	        android:id="@+id/content_text"
	        android:layout_width="match_parent"
	        android:layout_height="match_parent"        
	        android:duplicateParentState="true"
	        duanqu:strokeColor="#FFff0000"
        	duanqu:strokeJoinStyle="round"
        	duanqu:strokeWidth="1dp"
            android:gravity="center_vertical"
            android:layout_gravity="center_vertical"
            android:background="@null"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:inputType="none"
            android:textAllCaps="false"

            android:textColor="@color/qupai_text_dialog_vcode"
            android:textColorHint="@color/qupai_text_dialog_nickname"
            android:textCursorDrawable="@null"
            />
    </com.duanqu.qupai.widget.MyFrameLayout>

    

    <ImageView
        android:id="@+id/btn_edit_overlay_cancel"
        android:layout_width="@dimen/qupai_effect_diyoverlay_operation_size"
        android:layout_height="@dimen/qupai_effect_diyoverlay_operation_size"
        android:contentDescription="@null"
        android:duplicateParentState="true"
        android:layout_gravity="left|top"
        android:padding="10dp"
        android:src="?attr/qupaiDIYOverlayCancel" />   

    <ImageView
        android:id="@+id/btn_edit_overlay_transform"
        android:layout_width="@dimen/qupai_effect_diyoverlay_operation_size"
        android:layout_height="@dimen/qupai_effect_diyoverlay_operation_size"
        android:contentDescription="@null"
        android:duplicateParentState="true"
        android:layout_gravity="right|bottom"
        android:padding="10dp"
        android:src="?attr/qupaiDIYOverlayTransform" />
    
    <ImageView 
        android:id="@+id/btn_edit_overlay_text"
        android:layout_width="@dimen/qupai_effect_diyoverlay_operation_size"
        android:layout_height="@dimen/qupai_effect_diyoverlay_operation_size"
        android:contentDescription="@null"
        android:duplicateParentState="true"
        android:layout_gravity="right|top"
        android:padding="10dp"
        android:src="?attr/qupaiDIYOverlayText"/>


</com.duanqu.qupai.widget.EditImageWithPlay>