<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/asset_item_more"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:padding="@dimen/qupai_effect_list_item_margin" >

    <FrameLayout
        android:layout_width="@dimen/qupai_effect_list_more_item_image_width"
        android:layout_height="@dimen/qupai_effect_list_item_image_size"
        android:layout_gravity="center"
        android:layout_margin="@dimen/qupai_effect_list_item_border_size"
        android:background="@color/qupai_editor_asset_item_background" >

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="20dp"
            android:scaleType="center"
            android:src="?attr/qupaiEffectListMoreItem" />

        <TextView
            android:id="@+id/effect_chooser_item_text"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_gravity="center_horizontal|bottom"
            android:background="@color/qupai_black_opacity_40pct"
            android:ellipsize="none"
            android:gravity="center"
            android:singleLine="true"
            android:textColor="@android:color/white"
            android:textSize="13sp" />
    </FrameLayout>

</FrameLayout>