<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/qupai_gray_0x33"
    android:orientation="vertical" >

    <include
        android:id="@+id/action_bar"
        layout="@layout/ab_qupai_draft_chooser" />

    <ListView
        android:id="@+id/video_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:divider="@color/qupai_album_divider_line"
        android:dividerHeight="0.5dp"
        android:visibility="visible" />

    <LinearLayout
        android:id="@+id/gallery_group_empty_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="120dp"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:visibility="gone" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/qupai_import_empty_message"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            android:visibility="visible" />
    </LinearLayout>

</LinearLayout>
