<?xml version="1.0" encoding="utf-8"?>
<layer-list
  xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:id="@android:id/background">
        <shape android:shape="rectangle">
            <corners android:radius="0.0dip" />
            <stroke android:width="1.0px" android:color="@color/letv_color_ff000000" />
            <gradient android:startColor="@color/letv_color_ff46474a" android:endColor="@color/letv_color_ff46474a" android:angle="270.0" android:centerY="0.75" android:centerColor="@color/letv_color_ff46474a" />
        </shape>
    </item>
    <item android:id="@android:id/secondaryProgress">
        <clip android:gravity="left" android:clipOrientation="horizontal">
            <shape android:shape="rectangle">
                <corners android:radius="0.0dip" />
                <stroke android:width="1.0px" android:color="@color/letv_color_00000000" />
                <gradient android:startColor="@color/letv_color_ff46474a" android:endColor="@color/letv_color_ff46474a" android:angle="270.0" android:centerY="0.75" android:centerColor="@color/letv_color_ff46474a" />
            </shape>
        </clip>
    </item>
    <item android:id="@android:id/progress">
        <clip android:gravity="left" android:clipOrientation="horizontal">
            <shape android:shape="rectangle">
                <corners android:radius="0.0dip" />
                <stroke android:width="1.0px" android:color="@color/letv_color_00000000" />
                <gradient android:startColor="@color/letv_color_ff00a0e9" android:endColor="@color/letv_color_ff00a0e9" android:angle="270.0" android:centerY="0.75" android:centerColor="@color/letv_color_ff00a0e9" />
            </shape>
        </clip>
    </item>
</layer-list>